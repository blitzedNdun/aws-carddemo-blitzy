# =============================================================================
# CardDemo React Frontend Environment Configuration
# =============================================================================
# Example environment configuration file documenting all required environment
# variables for the React frontend application. This file serves as a template
# for local development and deployment configurations.
#
# Instructions:
# 1. Copy this file to .env.local for local development
# 2. Copy to .env.production for production builds
# 3. Update values according to your deployment environment
# 4. Ensure sensitive values are properly secured in production
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Base URL
# Points to the Spring Cloud Gateway that routes requests to Spring Boot services
# Local development: http://localhost:8080
# Docker Compose: http://backend:8080
# Kubernetes: https://api.carddemo.company.com
REACT_APP_API_BASE_URL=http://localhost:8080

# API Version
# Used for API versioning and backward compatibility
REACT_APP_API_VERSION=v1

# API Timeout Configuration (milliseconds)
# Request timeout for REST API calls
REACT_APP_API_TIMEOUT=30000

# API Retry Configuration
# Number of retry attempts for failed API requests
REACT_APP_API_RETRY_ATTEMPTS=3

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Authentication Endpoint
# Spring Security authentication endpoint for user login
REACT_APP_AUTH_ENDPOINT=/api/auth/login

# Logout Endpoint
# Spring Security logout endpoint
REACT_APP_LOGOUT_ENDPOINT=/api/auth/logout

# User Profile Endpoint
# Endpoint to fetch current user information
REACT_APP_USER_PROFILE_ENDPOINT=/api/auth/profile

# Password Reset Endpoint
# Endpoint for password reset functionality (if implemented)
REACT_APP_PASSWORD_RESET_ENDPOINT=/api/auth/reset-password

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session Timeout (minutes)
# Matches CICS session timeout behavior - auto logout after inactivity
# Default: 30 minutes to match mainframe CICS timeout
REACT_APP_SESSION_TIMEOUT=30

# Session Warning Time (minutes)
# Time before session expires to show warning to user
REACT_APP_SESSION_WARNING_TIME=5

# Session Check Interval (milliseconds)
# How frequently to check session validity
REACT_APP_SESSION_CHECK_INTERVAL=60000

# Auto Save Interval (milliseconds)
# Frequency for auto-saving form data to prevent data loss
REACT_APP_AUTO_SAVE_INTERVAL=30000

# =============================================================================
# FEATURE FLAGS - MIGRATION PHASES
# =============================================================================

# Main Menu System
# Enable/disable modernized menu system vs legacy navigation
REACT_APP_FEATURE_MODERN_MENU=true

# Account Management Features
# Enable account view, update, and management screens
REACT_APP_FEATURE_ACCOUNT_MANAGEMENT=true

# Credit Card Operations
# Enable credit card listing, creation, and management
REACT_APP_FEATURE_CREDIT_CARD_OPS=true

# Transaction Processing
# Enable transaction viewing and processing features
REACT_APP_FEATURE_TRANSACTION_PROCESSING=true

# User Administration
# Enable user management functionality (admin only)
REACT_APP_FEATURE_USER_ADMIN=true

# Billing and Statements
# Enable billing and statement generation features
REACT_APP_FEATURE_BILLING=true

# Reporting System
# Enable reporting and analytics features
REACT_APP_FEATURE_REPORTING=true

# Batch Job Monitoring
# Enable Spring Batch job monitoring interface
REACT_APP_FEATURE_BATCH_MONITORING=false

# Legacy Screen Emulation
# Enable 3270-style screen layouts for transition period
REACT_APP_FEATURE_LEGACY_SCREENS=false

# Progressive Web App Features
# Enable PWA capabilities for offline functionality
REACT_APP_FEATURE_PWA=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Application Title
# Displayed in browser title bar and main header
REACT_APP_TITLE=CardDemo Credit Card Management System

# Application Logo URL
# Path to application logo image
REACT_APP_LOGO_URL=/assets/logo.png

# Theme Configuration
# UI theme: light, dark, or auto
REACT_APP_THEME=light

# Page Size Configuration
# Default number of items per page in lists
REACT_APP_DEFAULT_PAGE_SIZE=25

# Maximum Page Size
# Maximum number of items that can be displayed per page
REACT_APP_MAX_PAGE_SIZE=100

# =============================================================================
# PAGINATION AND LIMITS
# =============================================================================

# Transaction List Page Size
# Number of transactions to display per page
REACT_APP_TRANSACTION_PAGE_SIZE=50

# Account List Page Size
# Number of accounts to display per page
REACT_APP_ACCOUNT_PAGE_SIZE=25

# User List Page Size
# Number of users to display per page (admin screens)
REACT_APP_USER_PAGE_SIZE=20

# Search Results Limit
# Maximum number of search results to return
REACT_APP_SEARCH_RESULTS_LIMIT=100

# =============================================================================
# VALIDATION CONFIGURATION
# =============================================================================

# Form Validation
# Enable client-side form validation matching BMS field rules
REACT_APP_ENABLE_CLIENT_VALIDATION=true

# Field Length Limits (matching COBOL picture clauses)
# Account number length (VSAM key length)
REACT_APP_ACCOUNT_NUMBER_LENGTH=11

# Credit card number length
REACT_APP_CARD_NUMBER_LENGTH=16

# User ID length (matching VSAM USRSEC key)
REACT_APP_USER_ID_LENGTH=8

# Customer ID length
REACT_APP_CUSTOMER_ID_LENGTH=9

# =============================================================================
# ERROR HANDLING
# =============================================================================

# Error Display Duration (milliseconds)
# How long to display error messages
REACT_APP_ERROR_DISPLAY_DURATION=5000

# Debug Mode
# Enable detailed error logging for development
REACT_APP_DEBUG_MODE=false

# Error Boundary Fallback
# Enable error boundary fallback UI
REACT_APP_ERROR_BOUNDARY_ENABLED=true

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Health Check Endpoint
# Spring Boot Actuator health endpoint
REACT_APP_HEALTH_CHECK_ENDPOINT=/actuator/health

# Health Check Interval (milliseconds)
# Frequency to check backend health status
REACT_APP_HEALTH_CHECK_INTERVAL=300000

# Performance Monitoring
# Enable client-side performance monitoring
REACT_APP_PERFORMANCE_MONITORING=false

# Analytics Tracking
# Enable user analytics tracking (if implemented)
REACT_APP_ANALYTICS_ENABLED=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CSRF Protection
# Enable CSRF token handling for Spring Security
REACT_APP_CSRF_ENABLED=true

# Content Security Policy
# Enable strict content security policy
REACT_APP_CSP_ENABLED=true

# Secure Cookie Settings
# Force secure cookies in production
REACT_APP_SECURE_COOKIES=true

# HTTP Only Cookies
# Force HTTP-only session cookies
REACT_APP_HTTP_ONLY_COOKIES=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Mock Data Mode
# Enable mock data for development without backend
REACT_APP_MOCK_DATA_MODE=false

# Hot Reload
# Enable hot module replacement for development
REACT_APP_HOT_RELOAD=true

# Source Maps
# Enable source maps for debugging
REACT_APP_GENERATE_SOURCEMAP=true

# Console Logging Level
# Logging level: error, warn, info, debug
REACT_APP_LOG_LEVEL=info

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# CDN Base URL
# Content Delivery Network base URL for static assets
REACT_APP_CDN_BASE_URL=

# Bundle Analyzer
# Enable webpack bundle analyzer
REACT_APP_ANALYZE_BUNDLE=false

# Performance Budget
# Enable performance budget warnings
REACT_APP_PERFORMANCE_BUDGET=true

# =============================================================================
# ENVIRONMENT DETECTION
# =============================================================================

# Environment Type
# Current environment: development, staging, production
REACT_APP_ENVIRONMENT=development

# Build Timestamp
# Timestamp of current build (auto-generated during build)
REACT_APP_BUILD_TIMESTAMP=

# Version Information
# Application version (from package.json)
REACT_APP_VERSION=

# Git Commit Hash
# Current git commit for deployment tracking
REACT_APP_GIT_COMMIT=

# =============================================================================
# BACKWARD COMPATIBILITY
# =============================================================================

# CICS Transaction Codes
# Enable CICS-style transaction code routing
REACT_APP_ENABLE_CICS_TRANSACTION_CODES=true

# BMS Screen Emulation
# Enable BMS mapset screen layout emulation
REACT_APP_BMS_SCREEN_EMULATION=false

# PF Key Support
# Enable function key navigation (F1=Help, F3=Exit, etc.)
REACT_APP_PF_KEY_SUPPORT=true

# Field-level Help
# Enable context-sensitive help system
REACT_APP_FIELD_LEVEL_HELP=true

# =============================================================================
# INTEGRATION ENDPOINTS
# =============================================================================

# File Upload Endpoint
# Endpoint for file uploads (batch processing)
REACT_APP_FILE_UPLOAD_ENDPOINT=/api/files/upload

# File Download Endpoint
# Endpoint for file downloads (reports, statements)
REACT_APP_FILE_DOWNLOAD_ENDPOINT=/api/files/download

# Batch Job Status Endpoint
# Spring Batch job status monitoring endpoint
REACT_APP_BATCH_STATUS_ENDPOINT=/api/batch/status

# System Status Endpoint
# Overall system health and status
REACT_APP_SYSTEM_STATUS_ENDPOINT=/api/system/status

# =============================================================================
# LOCALE AND INTERNATIONALIZATION
# =============================================================================

# Default Locale
# Application default locale
REACT_APP_DEFAULT_LOCALE=en-US

# Available Locales
# Comma-separated list of supported locales
REACT_APP_AVAILABLE_LOCALES=en-US

# Date Format
# Default date format for display
REACT_APP_DATE_FORMAT=MM/DD/YYYY

# Currency Format
# Currency formatting for financial amounts
REACT_APP_CURRENCY_FORMAT=USD

# Timezone
# Default timezone for date/time display
REACT_APP_TIMEZONE=America/New_York

# =============================================================================
# END OF CONFIGURATION
# =============================================================================