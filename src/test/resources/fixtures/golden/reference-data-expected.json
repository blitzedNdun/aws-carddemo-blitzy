  "cacheValidationData": {
    "redisConfig": {
      "transactionTypesCache": {
        "cacheName": "transactionTypes",
        "ttl": 86400,
        "keyPattern": "carddemo:reference:transaction-types:*",
        "expectedEntryCount": 7,
        "refreshFrequency": "daily"
      },
      "transactionCategoriesCache": {
        "cacheName": "transactionCategories", 
        "ttl": 86400,
        "keyPattern": "carddemo:reference:transaction-categories:*",
        "expectedEntryCount": 18,
        "refreshFrequency": "daily"
      },
      "disclosureGroupsCache": {
        "cacheName": "disclosureGroups",
        "ttl": 3600,
        "keyPattern": "carddemo:reference:disclosure-groups:*", 
        "expectedEntryCount": 7,
        "refreshFrequency": "hourly"
      }
    },
    "validationRules": {
      "transactionTypeValidation": {
        "codeFormat": "^[0-9]{2}$",
        "descriptionMaxLength": 60,
        "debitCreditRequired": true,
        "cacheableAnnotationRequired": true
      },
      "transactionCategoryValidation": {
        "codeFormat": "^[0-9]{4}$",
        "descriptionMaxLength": 60,
        "activeStatusRequired": true,
        "relationshipRequired": "TransactionCategoryBalance"
      },
      "disclosureGroupValidation": {
        "groupIdMaxLength": 10,
        "interestRatePrecision": 5,
        "interestRateScale": 4,
        "effectiveDateRequired": false,
        "bigDecimalRequired": true
      }
    },
    "cacheIntegrityChecks": {
      "dataConsistency": {
        "checkEntityToCache": true,
        "checkCacheToDatabase": true,
        "validateSerializationRoundtrip": true
      },
      "performanceThresholds": {
        "cacheHitRatio": 0.95,
        "avgLookupTime": 5,
        "maxLookupTime": 50
      }
    }
  },
  "entityMappingData": {
    "cobolTojavaMapping": {
      "transactionType": {
        "originalCopybook": "CVTRA03Y.cpy",
        "originalFields": {
          "TRAN-TYPE": "PIC X(02)",
          "TRAN-TYPE-DESC": "PIC X(50)"
        },
        "jpaEntityFields": {
          "transactionType": "VARCHAR(2) PRIMARY KEY",
          "typeDescription": "VARCHAR(60) NOT NULL",
          "debitCreditIndicator": "BOOLEAN NOT NULL (added)"
        },
        "validationAnnotations": [
          "@NotBlank",
          "@Size(min=2, max=2)",
          "@NotNull"
        ]
      },
      "transactionCategory": {
        "originalCopybook": "CVTRA04Y.cpy", 
        "originalFields": {
          "TRAN-CAT-CD": "PIC 9(04)",
          "TRAN-CAT-TYPE-DESC": "PIC X(50)"
        },
        "jpaEntityFields": {
          "transactionCategory": "VARCHAR(4) PRIMARY KEY",
          "categoryDescription": "VARCHAR(60) NOT NULL",
          "activeStatus": "BOOLEAN NOT NULL DEFAULT TRUE (added)"
        },
        "relationshipMappings": {
          "transactionCategoryBalances": "OneToMany with TransactionCategoryBalance"
        }
      },
      "disclosureGroup": {
        "originalCopybook": "CVTRA02Y.cpy",
        "originalFields": {
          "DIS-ACCT-GROUP-ID": "PIC X(10)",
          "DIS-INT-RATE": "PIC S9(04)V99 COMP-3"
        },
        "jpaEntityFields": {
          "groupId": "VARCHAR(10) PRIMARY KEY",
          "disclosureText": "TEXT (added)",
          "interestRate": "DECIMAL(5,4) using BigDecimal",
          "effectiveDate": "TIMESTAMP (added)"
        },
        "precisionMapping": {
          "cobolComp3": "PIC S9(04)V99 COMP-3",
          "javaBigDecimal": "DECIMAL(5,4) with MathContext.DECIMAL128",
          "rounding": "RoundingMode.HALF_EVEN"
        }
      }
    },
    "dataTypeConversions": {
      "picX": "String with @Size validation",
      "pic9": "String with numeric validation or Integer/Long",
      "picS9V99Comp3": "BigDecimal with exact precision",
      "boolean": "Boolean with @NotNull validation"
    },
    "indexingStrategy": {
      "primaryKeys": {
        "transaction_types.transaction_type": "B-tree index (automatic)",
        "transaction_categories.transaction_category": "B-tree index (automatic)", 
        "disclosure_groups.group_id": "B-tree index (automatic)"
      },
      "foreignKeys": {
        "accounts.disclosure_group_id": "References disclosure_groups(group_id)",
        "transactions.transaction_type": "References transaction_types(transaction_type)",
        "transactions.transaction_category": "References transaction_categories(transaction_category)"
      },
      "performanceIndexes": {
        "transaction_categories.active_status": "For active category lookups",
        "disclosure_groups.effective_date": "For rate history queries"
      }
    }
